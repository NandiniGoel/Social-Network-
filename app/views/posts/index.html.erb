<center>
<% if user_signed_in? %>
<br /><br /><br />
<btn class="btn btn-success"><%= link_to "Post a New Thought", new_post_path %></btn>
 
<% else %>



<% end %>
</center>
<% @posts.each do |post| %>

  <div class="row">
<div class="span1">
	<%= link_to image_tag(post.user.gravatar_url), profile_path(post.user) %>
</div>
<div class="span7">

<strong><%= post.user.full_name %>
</strong>

   
<br />
    <%= post.Content %><br />
    <%= link_to time_ago_in_words(post.created_at) + " ago", post %>  
<% if signed_in? && post.user == current_user %>

   |<%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> 

<% else %>
<% end %>

<% end %>

<br />

